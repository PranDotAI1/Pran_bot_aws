# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.env text eol=lf
*.template text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose.yml text eol=lf
.dockerignore text eol=lf

